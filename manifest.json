{
  "manifest_version": 2,

  "name": "百度贴吧签到",
  "description": "自动的进行贴吧的签到",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },

  "background": {
    "persistent": true,
      "scripts": ["js/jquery-3.2.1.min.js", "js/baidu.js", "js/background.js"]
    },
  "permissions": [
    "activeTab",
    "background",
    "cookies",
    "alarms",
    "<all_urls>",
    "*://*.baidu.com/*"
  ]
}
