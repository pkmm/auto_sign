{
  "manifest_version": 2,

  "name": "百度贴吧签到",
  "description": "自动的进行贴吧的签到",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "cookies",
    "<all_urls>",
    "*://*.baidu.com/*"
  ]
}
